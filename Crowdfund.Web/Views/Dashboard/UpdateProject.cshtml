@model Crowdfund.Core.Models.Project
@{
    ViewData["Title"] = "UpdateProject";
}

<div class="container updateproject-container">

    <!-- Project Title & Foto-->
    <div class="row">
        <div class="col col-md-3">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <a asp-controller="Dashboard" asp-action="Index" asp-route-id="@Globals.UserId" class="btn btn-lg btn-warning mb-4 w-100">
                        Back
                    </a>
                </div>
            </div>
        </div>


        <div class="col col-md-9">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <h5 class="card-title">Edit your Project: @Model.Title</h5>                 
                    <form method="post">
                        <div class="form-group">
                            <input type="hidden" class="form-control js-project-id" value="@Model.ProjectId">
                            <label for="title">Title</label>
                            <input type="text" class="form-control js-title" value="@Model.Title">
                        </div>
                        <div class="form-group">
                            <label for="categoryId">Category</label>
                            <select class="form-control js-project-update-category">
                                @foreach (var category in Globals.Categories)
                                {
                                    <option selected="@((int) category == (int) Model.Category)" value='@((int) category)'>@category</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="mainImageUrl">Main Image URL</label>
                            <input type="text" class="form-control js-mainImageUrl" value="@Model.MainImageUrl">
                        </div>
                        <div class="form-group">
                            <label for="dueTo">Due To</label>
                            <input type="date" class="form-control js-dueTo" value="@Model.DueTo">
                        </div>
                        <div class="form-group">
                            <label for="goal">Goal</label>
                            <input type="number" min="1" step="1" class="form-control js-goal" value="@Model.Goal">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control js-description" value="@Model.Description" rows="8"></textarea>
                        </div>
                        <button type="button" class="btn btn-lg btn-warning js-project-update-save">Save</button>
                        <div class="alert alert-success js-project-update-success-alert mt-2" role="alert" style="text-align:center">
                            Project's information updated successfully
                        </div>

                        <div class="alert alert-danger js-project-update-fail-alert mt-2" role="alert" style="text-align:center">
                            Project's information could not be updated
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>