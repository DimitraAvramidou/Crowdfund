@model Crowdfund.Core.Models.Project


<div class="container" style="margin-top: 90px;">

    <!-- Project Title & Foto-->
    <div class="row">
        <div class="col-12 col-sm-12 col-md-3">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <a asp-controller="Dashboard" asp-action="Index" asp-route-id="@Globals.UserId" class="btn btn-lg btn-warning mb-4 w-100">
                        Back
                    </a>
                </div>
            </div>
        </div>


        <div class="col-12 col-sm-12 col-md-9">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <h5 class="card-title">Edit your Project: @Model.Title</h5>
                    <form method="post">
                        <div class="form-group">
                            <input type="hidden" class="form-control" value="@Model.ProjectId">
                            <label for="title">Title</label>
                            <input type="text" name="@Html.NameFor(nm => nm.Title)" class="form-control js-update-project-title" id="title" value="@Model.Title">
                        </div>
                        <div class="form-group">
                            <label for="categoryId">Category</label>
                            <select class="form-control " name="categoryId" id="categoryId">
                                @foreach (var category in Globals.Categories)
                                {
                                    <option selected="@((int) category == (int) Model.Category)" value='@((int) category)'>@category</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control " rows="3" name="@Html.NameFor(nm => nm.Description)" id="description">@Model.Description</textarea>
                        </div>
                        <div class="form-group">
                            <label for="mainImageUrl">Main Image URL</label>
                            <input type="text" name="@Html.NameFor(nm => nm.MainImageUrl)" class="form-control " id="mainImageUrl" value="@Model.MainImageUrl">
                        </div>
                        <div class="form-group">
                            <label for="dueTo">Due To</label>
                            <input type="date" name="@Html.NameFor(nm => nm.DueTo)" class="form-control " id="dueTo" value="@Model.DueTo.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="form-group">
                            <label for="goal">Goal</label>
                            <input type="number" min="1" step="1" name="@Html.NameFor(nm => nm.Goal)" class="form-control " id="goal" value="@Model.Goal">
                        </div>
                        <button type="submit" class="btn btn-lg btn-warning ">Save</button>

                  
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>