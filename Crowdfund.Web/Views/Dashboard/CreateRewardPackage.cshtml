@{
    ViewBag.Title = "title";
}

<div class="container project-container">

    <!-- Project Title & Foto-->
    <div class="row">
        <div class="col col-md-3">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <a asp-action="Index" asp-route-id="@Globals.UserId" class="btn btn-lg btn-warning mb-4 w-100">
                        Back
                    </a>
                    <button class="btn btn-sm btn-secondary mb-4 w-100">
                        Backed Project
                    </button>
                    <a asp-controller="Dashboard" asp-action="UpdateUser" asp-route-id="@Globals.UserId" class="btn btn-lg btn-info mb-4 w-100">
                        Profile
                    </a>
                </div>
            </div>
        </div>


        <div class="col col-md-9">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <h5 class="card-title">Project: @Model.ProjectTitle</h5>
                    <form method="post">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" id="title">
                        </div>
                        <div class="form-group">
                            <label for="minAmount">Amount</label>
                            <input type="number" name="minAmount" class="form-control" id="minAmount">
                        </div>
                        <div class="form-group">
                            <label for="quantity">Quantity</label>
                            <input type="number" name="quantity" class="form-control" id="quantity" placeholder="Leave empty for unlimited">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" id="description" rows="8"></textarea>
                        </div>
                        <input type="hidden" name="projectId" value="@Model.ProjectId"/>
                        <button type="submit" class="btn btn-lg btn-warning">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>