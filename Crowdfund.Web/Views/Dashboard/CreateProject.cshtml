

<div class="container" style="margin-top: 90px;">

    <!-- Project Title & Foto-->
    <div class="row">
        <div class="col-12 col-sm-12 col-md-3">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <a asp-action="Index" asp-route-id="@Globals.UserId" class="btn btn-lg btn-warning mb-4 w-100">
                        Back
                    </a>
                </div>
            </div>
        </div>


        <div class="col-12 col-sm-12 col-md-9">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <form method="post" class="js-create-project-form">
                        <div class="form-group">
                            <label for="title">Project Title</label>
                            <input type="text" name="title" class="form-control js-create-project-title" id="title">
                        </div>
                        <div class="form-group">
                            <label for="categoryId">Category</label>
                            <select class="form-control js-create-project-category" name="categoryId" id="categoryId">
                                @foreach (var category in Globals.Categories)
                                {
                                    <option value='@((int) category)'>@category</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="mainImageUrl">Image Url</label>
                            <input type="text" name="mainImageUrl" class="form-control js-create-project-image" id="mainImageUrl">
                        </div>
                        <div class="form-group">
                            <label for="dueTo">Due To</label>
                            <input type="date" name="dueTo" class="form-control js-create-project-dueto" id="dueTo">
                        </div>
                        <div class="form-group">
                            <label for="goal">Goal</label>
                            <input type="number" min="1" step="1" name="goal" class="form-control js-create-project-goal" id="goal">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control js-create-project-description" id="description" rows="8"></textarea>
                        </div>
                        <button type="button" class="btn btn-lg btn-warning js-create-project-button">Create</button>

                        <div class="alert alert-success mt-3 js-create-project-success-alert" role="alert" style="text-align:center">
                            Project created successfully
                        </div>

                        <div class="alert alert-danger mt-3 js-create-project-fail-alert" role="alert" style="text-align:center">
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>