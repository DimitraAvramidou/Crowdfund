@{
    ViewData["Title"] = "CreateProject";
}

<div class="container project-container">

    <!-- Project Title & Foto-->
    <div class="row">
        <div class="col col-md-3">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <a asp-action="Index" asp-route-id="@Globals.UserId" class="btn btn-lg btn-warning mb-4 w-100">
                        Back
                    </a>
                </div>
            </div>
        </div>


        <div class="col col-md-9">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="title">Project Title</label>
                            <input type="text" name="title" class="form-control" id="title">
                        </div>
                        <div class="form-group">
                            <label for="categoryId">Category</label>
                            <select class="form-control" name="categoryId" id="categoryId">
                                @foreach (var category in Globals.Categories)
                                {
                                    <option value='@((int) category)'>@category</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="mainImageUrl">Image Url</label>
                            <input type="text" name="mainImageUrl" class="form-control" id="mainImageUrl">
                        </div>
                        <div class="form-group">
                            <label for="dueTo">Due To</label>
                            <input type="date" name="dueTo" class="form-control" id="dueTo">
                        </div>
                        <div class="form-group">
                            <label for="goal">Goal</label>
                            <input type="number" min="1" step="1" name="goal" class="form-control" id="goal">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" id="description" rows="8"></textarea>
                        </div>
                        <button type="submit" class="btn btn-lg btn-warning">Create</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>