@model Crowdfund.Core.Models.User
@{
    ViewData["Title"] = "UpdateUser";
}

    <div class="container profile-container">

        <!-- Project Title & Foto-->
        <div class="row">
            <div class="col col-md-3">
                <div class="card w-100 h-100">
                    <div class="card-body">
                        <a asp-action="CreateProject" asp-route-id="@Globals.UserId" class="btn btn-lg btn-warning mb-4 w-100">
                            Create Project
                        </a>
                        <button class="btn btn-sm btn-secondary mb-4 w-100">
                            Backed Project
                        </button>
                        <a asp-action="Index" asp-route-id="@Globals.UserId" class="btn btn-lg btn-info mb-4 w-100">
                            Back
                        </a>
                    </div>
                </div>
            </div>


            <div class="col col-md-9">
                <div class="card w-100 h-100">
                    <div class="card-body">
                        <h5 class="card-title">Edit your Profile</h5>
                        <form method="post">
                            <div class="form-group">
                                <label for="firstName">First Name</label>
                                <input type="text" name="@Html.NameFor(nm => nm.FirstName)" class="form-control" id="firstName" value="@Model.FirstName">
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name</label>
                                <input type="text" name="@Html.NameFor(nm => nm.LastName)" class="form-control" id="lastName" value="@Model.LastName">
                            </div>
                            <div class="form-group">
                                <label for="address">Address</label>
                                <input type="text" name="@Html.NameFor(nm => nm.Address)" class="form-control" id="address" value="@Model.Address">
                            </div>
                            <div class="form-group">
                                <label for="email">E-mail</label>
                                <input type="email" name="@Html.NameFor(nm => nm.Email)" class="form-control" id="email" value="@Model.Email">
                            </div>                                                      
                            <button type="submit" class="btn btn-lg btn-warning">Save</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
