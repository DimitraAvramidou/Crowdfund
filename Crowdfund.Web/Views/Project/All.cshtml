
@model IEnumerable<Crowdfund.Web.Models.AllProjects.AllProjectsViewModel>

@{
    ViewData["Title"] = "All";
}



<link rel="stylesheet" href="~/css/site.css" />
<!-- Start Featured Projects -->

<div class="album py-5 bg-light">
    <div class="container">
        <h2 class="text-muted text-center my-5">Explore @Model.Count() projects</h2>
        <div class="row">
            @foreach (var pr in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@pr.MainImageUrl" alt="Card image cap">
                        <div class="card-body">
                            <h3 class="text-center mb-2">@pr.Title</h3>
                            <div class="text-center mb-2">
                                <small class="text-muted">@pr.DueTo days to go</small>
                            </div>
                            <div class="progress mb-5">
                                <div class="progress-bar bg-success " role="progressbar" aria-valuenow="@pr.Progress" aria-valuemin="0" aria-valuemax="100" style="width:@pr.Progress%">@pr.Progress%</div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge badge-pill badge-warning mb-2" style="font-size: .9rem">@pr.BackingsAmount / @pr.Goal $</span>
                                    <small class="badge badge-pill badge-warning" style="font-size: .9rem">@pr.Backers  backers</small>
                                </div>
                                <a asp-controller="Project" asp-action="@pr.ProjectId" type="button" class="btn btn-md w-50 btn-success">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>




